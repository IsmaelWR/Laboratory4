<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="bp" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.FXMLAddStudentController">
   <center>
      <AnchorPane id="AnchorPane" prefHeight="432.0" prefWidth="750.0">
         <children>
            <Pane prefHeight="98.0" prefWidth="757.0" style="-fx-background-color: #9cbddc;">
               <children>
                  <Label layoutX="85.0" layoutY="25.0" text="Add Student (Singly Linked List)">
                     <font>
                        <Font name="Cambria" size="40.0" />
                     </font>
                  </Label>
               </children>
            </Pane>
            <Pane layoutX="10.0" layoutY="96.0" prefHeight="289.0" prefWidth="739.0">
               <children>
                  <Label layoutX="36.0" layoutY="34.0" text="Id:">
                     <font>
                        <Font name="Cambria" size="30.0" />
                     </font>
                  </Label>
                  <TextField fx:id="idTextField" layoutX="185.0" layoutY="38.0" prefHeight="31.0" prefWidth="149.0" />
                  <Label layoutX="36.0" layoutY="98.0" text="Name:">
                     <font>
                        <Font name="Cambria" size="30.0" />
                     </font>
                  </Label>
                  <TextField fx:id="nameTextField" layoutX="185.0" layoutY="98.0" prefHeight="38.0" prefWidth="449.0" />
                  <Label layoutX="36.0" layoutY="160.0" text="Age:">
                     <font>
                        <Font name="Cambria" size="30.0" />
                     </font>
                  </Label>
                  <TextField fx:id="ageTextField" layoutX="185.0" layoutY="163.0" prefHeight="31.0" prefWidth="125.0" />
                  <Label layoutX="36.0" layoutY="220.0" text="Address:">
                     <font>
                        <Font name="Cambria" size="30.0" />
                     </font>
                  </Label>
                  <TextField fx:id="addressTextField" layoutX="185.0" layoutY="220.0" prefHeight="38.0" prefWidth="522.0" />
               </children>
            </Pane>
            <Pane layoutX="5.0" layoutY="413.0" prefHeight="64.0" prefWidth="740.0">
               <children>
                  <Button fx:id="btnAdd" layoutX="28.0" layoutY="15.0" mnemonicParsing="false" onAction="#btnAddOnAction" prefHeight="31.0" prefWidth="88.0" style="-fx-background-color: #9cbddc;" text="Add">
                     <font>
                        <Font name="Cambria Bold" size="18.0" />
                     </font></Button>
                  <Button fx:id="btnClose" layoutX="611.0" layoutY="14.0" mnemonicParsing="false" onAction="#bntCloseOnAction" prefHeight="35.0" prefWidth="99.0" style="-fx-background-color: #9cbddc;" text="Close">
                     <font>
                        <Font name="Cambria Bold" size="18.0" />
                     </font></Button>
               </children>
            </Pane>
         </children>
      </AnchorPane>
   </center>
</BorderPane>
